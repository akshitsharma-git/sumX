{
  "version": 2,
  "public": true,
  
  "installCommand": "npm install --prefix ./backend && npm install --prefix ./frontend",
  
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  
  "routes": [
    {
      "src": "/",
      "methods": ["POST"],
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}