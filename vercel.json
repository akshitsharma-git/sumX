{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "builds": [
    { "src": "backend/server.js", "use": "@vercel/node" },
    { "src": "frontend/dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/",
      "methods": ["POST"],
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
